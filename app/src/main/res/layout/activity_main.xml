<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/topx"
        android:scaleType="fitXY"
        android:id="@+id/top"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/home"
        android:layout_below="@id/top"
        android:scaleType="fitXY"
        android:id="@+id/home"/>
    <LinearLayout
        android:layout_below="@id/home"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true"
        android:id="@+id/up">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/air_con"
                android:onClick="go"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/air_con" />
            <TextView
                android:id="@+id/air_con_txt"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/nummbersgreen"
                android:text="5"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/white"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/nell"
                android:onClick="go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/nell" />
            <TextView
                android:id="@+id/nell_txt"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/nummbersblue"
                android:text="5"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/white"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/elect"
                android:onClick="go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/elect" />
            <TextView
                android:id="@+id/elect_txt"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/nummbersblue2"
                android:text="5"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/white"/>
        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/dwon"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/up"
        android:layout_marginTop="14dp">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"

            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/garden"
                android:onClick="go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/garden" />
            <TextView
                android:id="@+id/garden_txt"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/nummbersred"
                android:text="5"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/white"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/water"
                android:onClick="go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/water" />
            <TextView
                android:id="@+id/water_txt"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/nummbersyellow"
                android:text="5"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/white"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/paint"
                android:onClick="go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/paint" />
            <TextView
                android:id="@+id/paint_txt"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/nummbersorange"
                android:text="5"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/white"/>

        </FrameLayout>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/down"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:text="COMFORT RANGES REPAIR"
        android:gravity="center"
        android:layout_above="@id/reports"
        android:textColor="#273a79"
        android:textStyle="bold"
        android:textSize="@dimen/large"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="عمل تقارير"
        android:background="@color/color6"
        android:textSize="@dimen/large"
        android:textColor="@color/white"
        android:layout_marginBottom="2dp"
        android:id="@+id/reports"/>

</RelativeLayout>